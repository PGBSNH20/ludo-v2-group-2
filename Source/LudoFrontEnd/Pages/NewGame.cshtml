@page
@model LudoFrontEnd.Pages.NewGameModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@section Styles {
    <link href="~/css/MainMenu.css" rel="stylesheet" type="text/css" />
}



<body>
    <div class="header">
        <a href="#default" class="logo">Ludo Land</a>
        <div class="header-right">
            <a class="active" href="#home">Home</a>
            <a href="#contact">Contact</a>
            <a href="#about">About</a>
        </div>
    </div>


    <form class="form-style-4" action="" method="post">

        
        <label>
            <h1 id="NOF">Number of Players?</h1>
            <input id="numberplayersinp" type="text" asp-for="NumberOfPlayers" placeholder="Number of Players? " />
           
            <span> </span><input id="numberplayers" type="submit" asp-page-handler="Check" value="Confirm!"  />
        </label>



        @if (Model.NumberOfPlayers == 2)
        {
            @for (int i = 0; i <= Model.NumberOfPlayers - 1; i++)
            {
                <label for="field1">
                    <span>Player @(@i + 1)  Name:</span> <input type="text" asp-for="Players[i].Name" class="btn btn-success" placeholder="Name "/>
                    <span>Player @(@i + 1)  Color:</span> <input type="text" asp-for="Players[i].ColorId" class="btn btn-success"placeholder="Color " />
                </label>
            }

        }
        else if (Model.NumberOfPlayers == 3)
        {
            @for (int i = 0; i <= Model.NumberOfPlayers - 1; i++)
            {
                <label for="field1">
                    <span>Player @(@i + 1)  Name:</span> <input type="text" asp-for="Players[i].Name" class="btn btn-success"placeholder="Name " />
                    <span>Player @(@i + 1) Color:</span> <input type="text" asp-for="Players[i].ColorId" class="btn btn-success" placeholder="Color " />
                </label>
            }
        }
        else if (true)
        {
            @for (int i = 0; i <= 3; i++)
            {

                <label for="field1">
                    <span>Player @(@i + 1)  Name:</span> <input type="text" asp-for="Players[i].Name" class="btn btn-success" placeholder="Name " />
                    <span>Player @(@i + 1) Color:</span> <input type="text" asp-for="Players[i].ColorId" class="btn btn-success" placeholder="Color " />
                </label>
            }
        }


        <span> </span><input type="submit" asp-page-handler="Add" value="Start!" />

    </form>
    <div class="footer-basic">
        <footer>

            <ul class="list-inline">
                <li class="list-inline-item"><a href="#">Services</a></li>
                <li class="list-inline-item"><a href="#">Terms</a></li>
                <li class="list-inline-item"><a href="#">Privacy Policy</a></li>
            </ul>
            <p class="copyright">Anas & Alejandra  © 2021</p>
        </footer>
    </div>
    </body>









