@page "/LudoGame/NewGame"
@model NewGamePlusModel
@section Styles {
    <link rel="stylesheet" href="~/css/site.css" />
}
@{
}
@* Player amount selection *@
@if (Model.PlayerCount <= 0)
{
<form class="form-style-4" method="post">
    <label>
        <h1 id="NOF">How many players?</h1>
        @for (int i = 2; i < 5; i++)
        {
            
            <label class="checkbox-label" for="@("playerCount"+i)">
                        <input type="radio" id="@("playerCount"+i)" name="playerCount" value="@i" required>
                        <span class="checkbox-custom"></span>
                        @i
            </label><br>
        }
        <input type="submit" value="Submit">
    </label>
</form>
}

@if (Model.Players.Count < Model.PlayerCount)
{
<form class="form-style-4" method="post">
    <h3 id="NOF">Player @(Model.CurrentPlayer) Name:</h3>
    <label for="field1">
        <input type="text" name="playerName" minlength="1" /><br />
    </label>

        @foreach (var index in Model.GetAvailableColorIndixes())
        {

            <label class="checkbox-label" for="@("color" +index)" style="font-weight: bold; color: @("#"+Model.Colors[index].ColorCode)">

                <input  type="radio" id="@("color" +index)" name="colorId" value="@(Model.Colors[index].Id)" required >
                <span class="checkbox-custom"></span>
                @Model.ColorNames[index]

            </label>
        }
        <br />
        <input type="submit" />
</form>
}